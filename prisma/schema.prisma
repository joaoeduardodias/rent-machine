generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Machine {
  id            String @id @default(cuid())
  name          String
  fileKey       String
  price_per_day Float?
  price_per_km  Float?
  img_src       String
  quantity      Int

  @@map("machines")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  @@map("users")
}
