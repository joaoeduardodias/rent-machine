generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Machine {
  id       String  @id @default(cuid())
  name     String
  fileKey  String
  img_src  String
  quantity Int
  rent_id  String?
  rents    Rent?   @relation(fields: [rent_id], references: [id])

  @@map("machines")
}

model Rent {
  id            String    @id @default(cuid())
  start_date    DateTime
  end_date      DateTime
  createdAt     DateTime  @default(now())
  client        String
  status        String?   @default("pending")
  address       String
  cep           String
  number        Float
  paymentMethod String
  value         Float
  message       String?
  machines      Machine[]

  @@map("rents")
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  @@map("users")
}
